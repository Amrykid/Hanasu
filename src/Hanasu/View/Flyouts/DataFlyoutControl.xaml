    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Hanasu.View.Flyouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i18n="using:Crystal.Localization"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    
    <Grid>
        <StackPanel Orientation="Vertical">
            <!--<TextBlock FontSize="22" TextAlignment="Center" i18n:CrystalLocalizedValueHelper.LocalizationKey="CachedDataHeader"></TextBlock>-->
            <TextBlock FontSize="19" i18n:CrystalLocalizedValueHelper.LocalizationKey="CachedDataMsg" TextWrapping="Wrap" TextAlignment="Center" Margin="10"></TextBlock>
            <Button Width="Auto" HorizontalAlignment="Center" i18n:CrystalLocalizedValueHelper.LocalizationKey="CachedDataDeleteBtn" Click="Button_Click_1" Padding="0 10 0 0"/>
        </StackPanel>
    </Grid>
</UserControl>
