<Window x:Class="Hanasu.Services.Notifications.NotificationsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Notifications Window" Height="142" Width="347" Background="Black" ResizeMode="NoResize" WindowStyle="None" ShowInTaskbar="False" ShowActivated="True" Topmost="True" Opacity="0.8" AllowsTransparency="True">
    <Grid>
        <Label Content="{Binding Title}" Height="40" Margin="67,2,12,0" Name="label1" VerticalAlignment="Top" FontSize="17" Foreground="White" Opacity="1.0" />
        <TextBlock Margin="15,39,12,12" Name="textBlock1" Text="{Binding Message}" TextWrapping="Wrap" Foreground="White" FontSize="15" />
        <Image HorizontalAlignment="Left" Margin="12,2,0,0" Name="image1" Stretch="Fill" Width="49" Source="pack://application:,,,/Hanasu;component/Resources/i.png" Height="40" VerticalAlignment="Top" />
    </Grid>
</Window>
